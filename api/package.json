{
    "name": "wbw-api",
    "version": "1.0.0",
    "description": "’Who Brings What’ - Api aims to provide some fun tools for helping people in events organization",
    "main": "server.js",
    "scripts": {
        "start": "nodemon ./bin/www",
        "test": "NODE_ENV=test ./node_modules/mocha/bin/mocha --reporter spec --recursive tests/*",
        "test:watch": "NODE_ENV=test ./node_modules/mocha/bin/mocha --reporter spec --recursive tests/* --watch",
        "coverage": "NODE_ENV=test ./node_modules/.bin/istanbul cover --report html _mocha -- --recursive tests",
        "coveralls": "env.COVERALLS_SERVICE_NAME env.COVERALLS_REPO_TOKEN NODE_ENV=test ./node_modules/.bin/istanbul cover --dir '../coverage' --report lcovonly _mocha -- --recursive tests -- -R spec && cat ../coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ../coverage"
    },
    "author": "Florian",
    "license": "ISC",
    "dependencies": {
        "blipp": "^2.3.0",
        "chai-as-promised": "^7.1.1",
        "good": "^7.2.0",
        "good-console": "^6.4.0",
        "good-squeeze": "^5.0.2",
        "hapi": "^16.5.2",
        "joi": "^10.6.0",
        "mocha": "^3.3.0",
        "mongoose": "^4.11.7",
        "rootpath": "^0.1.2",
        "shortid": "^2.2.8"
    },
    "devDependencies": {
        "boom": "^5.2.0",
        "chai": "^3.5.0",
        "coveralls": "^2.13.1",
        "istanbul": "^0.4.5",
        "lodash": "^4.17.4",
        "mocha": "^3.3.0",
        "mocha-lcov-reporter": "^1.3.0",
        "nodemon": "^1.11.0",
        "sinon": "^3.1.0",
        "supertest": "^3.0.0"
    }
}